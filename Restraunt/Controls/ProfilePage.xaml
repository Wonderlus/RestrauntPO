<UserControl x:Class="Restraunt.Controls.ProfilePage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Border Background="{StaticResource CardBg}"
            BorderBrush="{StaticResource OrangeBorder}"
            BorderThickness="1"
            CornerRadius="12"
            Padding="24"
            MaxWidth="500">

        <StackPanel>

            <TextBlock Text="Мой профиль"
                       FontSize="22"
                       FontWeight="Bold"
                       Foreground="{StaticResource OrangeText}"
                       Margin="0,0,0,16"/>

            <TextBlock Text="Имя"/>
            <TextBox Text="{Binding FullName, UpdateSourceTrigger=PropertyChanged}"
         Margin="0,4,0,12"/>

            <TextBlock Text="Телефон"/>
            <TextBox Text="{Binding Phone, UpdateSourceTrigger=PropertyChanged}"
         Margin="0,4,0,12"/>

            <TextBlock Text="Email"/>
            <TextBox Text="{Binding Email, UpdateSourceTrigger=PropertyChanged}"
         Margin="0,4,0,20"/>

            <Button Content="Сохранить"
                    Style="{StaticResource PrimaryButton}"
                    Height="40"
                    Click="Save_Click"/>
        </StackPanel>

    </Border>
</UserControl>
