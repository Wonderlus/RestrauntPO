<UserControl x:Class="Restraunt.Controls.MenuSidebar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Border Padding="12">

        <StackPanel>

            <!-- TITLE -->
            <TextBlock Text="Фильтры"
                       FontSize="16"
                       FontWeight="Bold"
                       Foreground="{StaticResource OrangeText}"
                       Margin="0,0,0,16"/>

            <!-- CATEGORIES -->
            <TextBlock Text="Категории"
                       FontWeight="SemiBold"
                       Margin="0,0,0,8"/>

            <ItemsControl ItemsSource="{Binding Categories}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <CheckBox Content="{Binding Name}"
                                  IsChecked="{Binding IsSelected, Mode=TwoWay}"/>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>

            <Separator Margin="0,16"/>

            <!-- FLAGS -->
            <TextBlock Text="Опции"
                       FontWeight="SemiBold"
                       Margin="0,0,0,8"/>

            <CheckBox Content="Сезонные блюда"
                      IsChecked="{Binding OnlySeasonal, Mode=TwoWay}"/>

            <CheckBox Content="Акционные блюда"
                      IsChecked="{Binding OnlyPromotional, Mode=TwoWay}"/>

            <Separator Margin="0,16"/>

            <!-- ACTIONS -->
            <Button Content="Применить"
                    Style="{StaticResource PrimaryButton}"
                    Height="36"
                    Command="{Binding ApplyFiltersCommand}"/>

            <Button Content="Сбросить"
                    Margin="0,8,0,0"
                    Style="{StaticResource PrimaryButton}"
                    Height="36"
                    Command="{Binding ResetFiltersCommand}"/>

        </StackPanel>
    </Border>
</UserControl>
