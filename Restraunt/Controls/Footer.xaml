<UserControl x:Class="Restraunt.Controls.Footer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Restraunt.Controls"
             mc:Ignorable="d" 
             Height="50">
    <Border Background="#FFFFF4E5" BorderBrush="{StaticResource OrangeBorder}" BorderThickness="1,1,0,0" Padding="16">
        <DockPanel>
            <TextBlock DockPanel.Dock="Left"
                       Text="© 2025 Savory Restaurant. All rights reserved."
                       Foreground="{StaticResource OrangeText}"
                       FontSize="11"/>
            <StackPanel DockPanel.Dock="Right" Orientation="Horizontal" HorizontalAlignment="Right" >
                <TextBlock Text="Facebook" Margin="0,0,12,0" Foreground="#FFB07340"/>
                <TextBlock Text="Instagram" Margin="0,0,12,0" Foreground="#FFB07340"/>
                <TextBlock Text="Twitter" Foreground="#FFB07340"/>
            </StackPanel>
        </DockPanel>
    </Border>
</UserControl>
