<UserControl x:Class="Restraunt.Controls.TopNavBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:conv="clr-namespace:Restraunt.Converters"
             Height="80"
             DataContext="{Binding DataContext, RelativeSource={RelativeSource AncestorType=Window}}"
             Background="#FFFFF8F0">
    
    <UserControl.Resources>
        <conv:BoolToVisibilityConverter x:Key="BoolToVisibility"/>
    </UserControl.Resources>

    <Border BorderBrush="{StaticResource OrangeBorder}"
            BorderThickness="0,0,0,1"
            Padding="16"
            Background="#FFFFF8F0">

        <Grid>
            <Grid.ColumnDefinitions>
                <!-- ЛОГО -->
                <ColumnDefinition Width="Auto"/>

                <!-- ЦЕНТР -->
                <ColumnDefinition Width="*"/>

                <!-- ПОЛЬЗОВАТЕЛЬ -->
                <ColumnDefinition Width="Auto"/>

                <!-- ВЫЙТИ -->
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- LOGO -->
            <StackPanel Orientation="Horizontal"
                        VerticalAlignment="Center"
                        Grid.Column="0">
                <TextBlock Text="🍽" FontSize="20" Margin="0,0,6,0"/>
                <TextBlock Text="Savory"
                           Foreground="{StaticResource OrangeText}"
                           FontWeight="SemiBold"
                           FontSize="16"/>
            </StackPanel>

            <!-- NAVIGATION (CENTER) -->
            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Grid.Column="1">
                <Button Style="{StaticResource SidebarItemButton}"
                        Content="Профиль"
                        Click="Profile_Click"/>

                <Button Style="{StaticResource SidebarItemButton}"
                        Content="Меню"
                        Click="Menu_Click"/>

                <Button Style="{StaticResource SidebarItemButton}"
                        Content="Корзина"
                        Click="Basket_Click"/>

                <Button Style="{StaticResource SidebarItemButton}"
                        Content="Заказы"
                        Click="Orders_Click"/>

                <Button Style="{StaticResource SidebarItemButton}"
                        Content="Клиенты"
                        Click="Customers_Click"
                        Visibility="{Binding IsAdmin,
                                     Converter={StaticResource BoolToVisibility}}"/>

                <Button Style="{StaticResource SidebarItemButton}"
                        Content="Адреса"
                        Click="Addresses_Click"/>
            </StackPanel>

            <!-- USER INFO -->
            <StackPanel Grid.Column="2"
                        VerticalAlignment="Center"
                        Margin="0,0,16,0"
                        Visibility="{Binding IsAuthenticated,
                                     Converter={StaticResource BoolToVisibility}}">

                <TextBlock Text="{Binding DataContext.UserName,
                  RelativeSource={RelativeSource AncestorType=Window}}"
                           FontWeight="SemiBold"
                           TextAlignment="Right"
                           TextTrimming="CharacterEllipsis"
                           MaxWidth="180"/>

                <TextBlock Text="{Binding DataContext.UserPhone,
                  RelativeSource={RelativeSource AncestorType=Window}}"
                           FontSize="11"
                           Foreground="#FFB07340"
                           TextAlignment="Right"
                           TextTrimming="CharacterEllipsis"
                           MaxWidth="180"/>

                <TextBlock Text="{Binding DataContext.UserEmail,
                  RelativeSource={RelativeSource AncestorType=Window}}"
                           FontSize="11"
                           Foreground="#FFB07340"
                           TextAlignment="Right"
                           TextTrimming="CharacterEllipsis"
                           MaxWidth="180"/>
            </StackPanel>

            <!-- LOGOUT -->
            <Button Grid.Column="3"
                    Style="{StaticResource PrimaryButton}"
                    Content="Выйти"
                    Click="Logout_Click"
                    MinWidth="120"
                    Height="20"
                    Padding="18,8"
                    FontSize="14"/>

        </Grid>
    </Border>
</UserControl>
