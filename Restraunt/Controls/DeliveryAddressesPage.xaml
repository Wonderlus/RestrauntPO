<UserControl x:Class="Restraunt.Controls.DeliveryAddressesPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="{StaticResource OrangeBg}">

    <Border Background="{StaticResource CardBg}"
            BorderBrush="{StaticResource OrangeBorder}"
            BorderThickness="1"
            CornerRadius="16"
            Padding="20"
            Margin="16">

        <StackPanel>

            <TextBlock Text="Адреса доставки"
                       FontSize="20"
                       FontWeight="SemiBold"
                       Foreground="{StaticResource OrangeText}"
                       Margin="0,0,0,16"/>

            <!-- Список адресов -->
            <ListBox ItemsSource="{Binding Addresses}"
                     SelectedItem="{Binding SelectedAddress}"
                     DisplayMemberPath="Address"
                     Height="200"
                     Margin="0,0,0,12"/>

            <!-- Новый адрес -->
            <TextBlock Text="Новый адрес" Margin="0,0,0,4"/>
            <TextBox Text="{Binding NewAddress, UpdateSourceTrigger=PropertyChanged}"
                     Margin="0,0,0,12"/>

            <!-- Кнопки -->
            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Right">

                <Button Content="Удалить"
                        Width="100"
                        Height="36"
                        Margin="0,0,8,0"
                        Style="{StaticResource PrimaryButton}"
                        Command="{Binding RemoveCommand}"/>

                <Button Content="Добавить"
                        Width="120"
                        Height="36"
                        Style="{StaticResource PrimaryButton}"
                        Command="{Binding AddCommand}"/>
            </StackPanel>

        </StackPanel>
    </Border>
</UserControl>
