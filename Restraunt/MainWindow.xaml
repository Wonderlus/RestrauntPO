<Window x:Class="Restraunt.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:Restraunt"
        xmlns:controls="clr-namespace:Restraunt.Controls"
        Title="Restraunt" Height="720" Width="1180"
        Background="{StaticResource OrangeBg}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Верхняя панель -->
            <RowDefinition Height="*"/>
            <!-- Основной контент -->
            <RowDefinition Height="Auto"/>
            <!-- Футер -->
        </Grid.RowDefinitions>

        <!-- Верхняя панель -->
        <controls:TopNavBar Grid.Row="0"/>

        <!-- Основной контент -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="230"/>
                <!-- Sidebar -->
                <ColumnDefinition Width="*"/>
                <!-- Контент -->
            </Grid.ColumnDefinitions>

            <!-- Боковое меню -->
            <controls:Sidebar Grid.Column="0"/>

            <!-- Контент, который будет меняться -->
            <Border Grid.Column="1" Padding="16" Background="Transparent">
                <controls:MainContent/>
            </Border>
        </Grid>

        <!-- Футер -->
        <controls:Footer Grid.Row="2"/>
    </Grid>
</Window>
