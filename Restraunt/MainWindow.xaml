<Window x:Class="Restraunt.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:Restraunt"
        xmlns:controls="clr-namespace:Restraunt.Controls"
        Title="Restraunt" Height="720" Width="1180"
        Background="{StaticResource OrangeBg}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Top navigation -->
        <controls:TopNavBar Grid.Row="0"/>

        <!-- Main area -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="230"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Sidebar -->
            <controls:Sidebar x:Name="SidebarHost" Grid.Column="0"/>

            <!-- Content -->
            <ContentControl x:Name="MainContentHost"
                        Grid.Column="1"
                        Margin="16"/>
        </Grid>
    </Grid>

</Window>
