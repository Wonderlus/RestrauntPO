<Window x:Class="Restraunt.Windows.CheckoutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Оформление заказа"
        Width="500"
        Height="750"
        WindowStartupLocation="CenterOwner"
        Background="{StaticResource OrangeBg}"
        ResizeMode="NoResize">

    <Border Background="{StaticResource CardBg}"
            BorderBrush="{StaticResource OrangeBorder}"
            BorderThickness="1"
            CornerRadius="16"
            Padding="20"
            Margin="16">

        <StackPanel>

            <!-- Заголовок -->
            <TextBlock Text="Оформление заказа"
                       FontSize="20"
                       FontWeight="SemiBold"
                       Foreground="{StaticResource OrangeText}"
                       Margin="0,0,0,20"/>

            <!-- Тип заказа -->
            <TextBlock Text="Тип заказа" Margin="0,0,0,4"/>
            <ComboBox ItemsSource="{Binding OrderTypes}"
                      SelectedItem="{Binding SelectedOrderType}"
                      Margin="0,0,0,12"/>

            <!-- Адрес -->
            <TextBlock Text="Адрес доставки" Margin="0,0,0,4"/>
            <ComboBox ItemsSource="{Binding DeliveryAddresses}"
                      DisplayMemberPath="Address"
                      SelectedItem="{Binding SelectedAddress}"
                      IsEnabled="{Binding IsDelivery}"
                      Margin="0,0,0,12"/>

            <!-- Время -->
            <TextBlock Text="Время доставки (HH:mm)" Margin="0,0,0,4"/>

            <TextBox Text="{Binding DeliveryTimeText}"
                     IsEnabled="{Binding IsDelivery}"
                     Margin="0,0,0,12"/>

            <!-- Комментарий -->
            <TextBlock Text="Комментарий" Margin="0,0,0,4"/>
            <TextBox Text="{Binding SpecialRequests}"
                     AcceptsReturn="True"
                     Height="80"
                     Margin="0,0,0,16"/>

            <!-- Баллы лояльности -->
            <Border Background="#FFFFF8F0"
                    BorderBrush="{StaticResource OrangeBorder}"
                    BorderThickness="1"
                    CornerRadius="8"
                    Padding="12"
                    Margin="0,0,0,12">
                <StackPanel>
                    <TextBlock Text="Баллы лояльности"
                               FontWeight="SemiBold"
                               Margin="0,0,0,8"/>
                    <TextBlock>
                        <Run Text="Доступно баллов: "/>
                        <Run Text="{Binding AvailablePoints, Mode=OneWay}" FontWeight="SemiBold"/>
                    </TextBlock>
                    <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                        <TextBlock Text="Использовать баллов: " VerticalAlignment="Center" Margin="0,0,8,0"/>
                        <TextBox Text="{Binding PointsToUse, UpdateSourceTrigger=PropertyChanged}"
                                 Width="80"
                                 VerticalAlignment="Center"/>
                        <TextBlock VerticalAlignment="Center" Margin="8,0,0,0">
                            <Run Text="(скидка "/>
                            <Run Text="{Binding PointsDiscountAmount, Mode=OneWay, StringFormat='{}{0:F2}'}"/>
                            <Run Text=" ₽)"/>
                        </TextBlock>
                    </StackPanel>
                </StackPanel>
            </Border>

            <!-- Итог -->
            <TextBlock FontSize="16"
                       FontWeight="SemiBold"
                       Foreground="{StaticResource OrangeText}"
                       Margin="0,0,0,20">
                <Run Text="Итого: "/>
                <Run Text="{Binding TotalAmount, Mode=OneWay, StringFormat='{}{0:F2}'}"/>
                <Run Text=" ₽"/>
            </TextBlock>

            <!-- Кнопки -->
            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Right">

                <Button Content="Отмена"
                        Width="100"
                        Height="36"
                        Margin="0,0,8,0"
                        Style="{StaticResource PrimaryButton}"
                        Command="{Binding CancelCommand}"/>

                <Button Content="Подтвердить"
                        Width="140"
                        Height="36"
                        Style="{StaticResource PrimaryButton}"
                        Command="{Binding ConfirmOrderCommand}"/>
            </StackPanel>

        </StackPanel>
    </Border>
</Window>
