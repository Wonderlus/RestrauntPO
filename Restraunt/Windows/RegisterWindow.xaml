<Window x:Class="Restraunt.Windows.RegisterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Register"
        Height="420"
        Width="360"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="{StaticResource OrangeBg}">

    <Border Padding="24">
        <StackPanel>

            <TextBlock Text="Регистрация"
                       FontSize="22"
                       FontWeight="Bold"
                       Foreground="{StaticResource OrangeText}"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,20"/>

            <TextBlock Text="Полное имя"/>
            <TextBox Text="{Binding FullName, UpdateSourceTrigger=PropertyChanged}"
                     Margin="0,4,0,12"/>

            <TextBlock Text="Телефон"/>
            <TextBox Text="{Binding Phone, UpdateSourceTrigger=PropertyChanged}"
                     Margin="0,4,0,12"/>

            <TextBlock Text="Электронная почта"/>
            <TextBox Text="{Binding Email, UpdateSourceTrigger=PropertyChanged}"
                     Margin="0,4,0,12"/>

            <TextBlock Text="Пароль"/>
            <PasswordBox x:Name="PasswordBox"
                         Margin="0,4,0,20"/>

            <Button Content="Зарегистрироваться"
                    Style="{StaticResource PrimaryButton}"
                    Command="{Binding RegisterCommand}"
                    CommandParameter="{Binding ElementName=PasswordBox}"
                    Height="40"/>
        </StackPanel>
    </Border>
</Window>
