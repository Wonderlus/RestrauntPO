<Window x:Class="Restraunt.Windows.DishEditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="{Binding WindowTitle}"
        Height="680"
        Width="450"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="{StaticResource OrangeBg}">

    <Border Padding="20">
        <StackPanel>

            <TextBlock Text="Блюдо"
                       FontSize="22"
                       FontWeight="Bold"
                       Foreground="{StaticResource OrangeText}"
                       Margin="0,0,0,16"/>

            <!-- Название -->
            <TextBlock Text="Название"/>
            <TextBox Text="{Binding Dish.Name, UpdateSourceTrigger=PropertyChanged}"
                     Margin="0,4,0,12"/>

            <!-- Описание -->
            <TextBlock Text="Описание"/>
            <TextBox Text="{Binding Dish.Description}"
                     Height="60"
                     TextWrapping="Wrap"
                     AcceptsReturn="True"
                     Margin="0,4,0,12"/>

            <TextBlock Text="Категория"/>
            <ComboBox ItemsSource="{Binding Categories}"
                      DisplayMemberPath="Name"
                      SelectedValuePath="Id"
                      SelectedValue="{Binding Dish.CategoryId}"
                      Margin="0,4,0,12"/>

            <!-- Цена -->
            <TextBlock Text="Цена"/>
            <TextBox Text="{Binding Dish.Price}"
                     Margin="0,4,0,12"/>

            <!-- Флаги -->
            <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                <CheckBox Content="Сезонное"
                          IsChecked="{Binding Dish.IsSeasonal}"
                          Margin="0,0,16,0"/>
                <CheckBox Content="Акционное"
                          IsChecked="{Binding Dish.IsPromotional}"/>
            </StackPanel>

            <!-- Изображение -->
            <TextBlock Text="Путь к изображению"/>
            <TextBox Text="{Binding Dish.ImageUrl}"
                     Margin="0,4,0,12"/>

            <!-- Buttons -->
            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Right"
                        Margin="0,8,0,0">
                <Button Content="Отмена"
                        Margin="0,0,8,0"
                        Style="{StaticResource PrimaryButton}"
                        Height="36"
                        Command="{Binding CancelCommand}"/>
                <Button Content="Сохранить"
                        Style="{StaticResource PrimaryButton}"
                        Height="36"
                        Command="{Binding SaveCommand}"/>
            </StackPanel>

        </StackPanel>
    </Border>
</Window>
