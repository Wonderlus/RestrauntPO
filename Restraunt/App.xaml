<Application x:Class="Restraunt.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             StartupUri="Windows/LoginWindow.xaml">
    <Application.Resources>

        <!-- Цвета -->
        <SolidColorBrush x:Key="OrangeBg" Color="#FFFDF4EB"/>
        <SolidColorBrush x:Key="OrangeBorder" Color="#FFEEC9A5"/>
        <SolidColorBrush x:Key="OrangeText" Color="#FF9B4A1E"/>
        <SolidColorBrush x:Key="CardBg" Color="White"/>

        <!-- Общая кнопка -->
        <Style x:Key="PrimaryButton" TargetType="Button">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="10,6"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <!-- Бордер с градиентом -->
                        <Border x:Name="PART_Border" CornerRadius="10">
                            <Border.Background>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                    <!-- Tailwind orange-500 → amber-500 -->
                                    <GradientStop Color="#F97316" Offset="0"/>
                                    <GradientStop Color="#F59E0B" Offset="1"/>
                                </LinearGradientBrush>
                            </Border.Background>
                            <ContentPresenter HorizontalAlignment="Center"
                                      VerticalAlignment="Center"
                                      Margin="4,0,4,0"/>
                        </Border>

                        <!-- Эффекты наведения и нажатия -->
                        <ControlTemplate.Triggers>
                            <!-- hover: лёгкое высветление -->
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="PART_Border" Property="Opacity" Value="0.92"/>
                            </Trigger>
                            <!-- pressed: чуть темнее -->
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="PART_Border" Property="Opacity" Value="0.8"/>
                            </Trigger>
                            <!-- disabled -->
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="PART_Border" Property="Opacity" Value="0.5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>




        <!-- Кнопка-иконка (для действий в карточках) -->
        <Style x:Key="IconButton" TargetType="Button" BasedOn="{StaticResource PrimaryButton}">
            <Setter Property="Padding" Value="6"/>
            <Setter Property="Width" Value="30"/>
            <Setter Property="Height" Value="30"/>
        </Style>

        <!-- Стиль для пунктов бокового меню -->
        <Style x:Key="SidebarItemButton" TargetType="Button">
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Foreground" Value="#FF9B4A1E"/>
            <Setter Property="Padding" Value="10,6"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="bd" CornerRadius="6" Background="Transparent">
                            <ContentPresenter Margin="4,0"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="bd" Property="Background" Value="#FFFFEDD7"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

    </Application.Resources>
</Application>
